<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background2" tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginTop="15sp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:context="MainActivity"
        android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SANDUICHES"
        android:id="@+id/sanduba"
        android:padding="20dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:onClick="sanduba"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="PASTEL"
        android:id="@+id/pastel"
        android:onClick="pastel"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Quantidade de clientes:"/>
        <Button
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="+"
            android:layout_gravity="center"
            android:onClick="Positivo"
            />

        <ImageView
            android:layout_width="79dp"
            android:layout_height="94dp"
            android:src="@drawable/burger"
            android:layout_gravity="right" />


    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:context="MainActivity"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REFRIGERANTES"
            android:id="@+id/refrigerantes"
            android:padding="20dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:onClick="refrigerantes"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="PIZZAS"
            android:id="@+id/pizza"
            android:onClick="pizza"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/Numero"
            android:textSize="60dp"
            android:text="0"/>

    </LinearLayout>

    </LinearLayout>
</RelativeLayout>
