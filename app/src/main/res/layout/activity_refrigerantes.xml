<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background2"
    tools:context="com.example.android.lanchonetedotiago.refrigerantes">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REFRIGERANTES"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginTop="120sp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COCA-COLA = R$ 5"
            android:id="@+id/cocacola"
            android:onClick="cocacola"
            android:layout_gravity="center_vertical" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="guarana"
            android:text="GUARANÁ = R$ 5"
            android:id="@+id/guarana"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="sucocopo"
            android:text="SUCO NO COPO = R$ 2"
            android:id="@+id/sucocopo"
            />





    </LinearLayout>

</RelativeLayout>
