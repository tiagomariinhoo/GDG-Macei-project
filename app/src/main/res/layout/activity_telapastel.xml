<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background2"
    tools:context="com.example.android.lanchonetedotiago.telapastel">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASTEL"
        android:textSize="45dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginTop="120sp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASTEL DE CARNE = R$ 10"
            android:id="@+id/pastelcarne"
            android:onClick="PastelCarne"
            android:layout_gravity="center_vertical" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="PastelBacon"
            android:text="PASTEL DE BACON = R$ 10"
            android:id="@+id/PastelBacon"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="PastelFrango"
            android:text="PASTEL DE FRANGO = R$ 10"
            android:id="@+id/PastelFrango"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="PastelCharque"
            android:text="PASTEL DE CHARQUE = R$ 10"
            android:id="@+id/PastelCharque"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="PASTEL DE QUEIJO = R$ 10"
            android:onClick="PastelQueijo"
            android:id="@+id/PastelQueijo"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:id="@+id/finalizarCompra"
            android:text="FINALIZAR COMPRA"/>

    </LinearLayout>

</RelativeLayout>
