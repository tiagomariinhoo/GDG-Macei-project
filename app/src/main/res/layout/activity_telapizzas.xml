<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background2"
    tools:context="com.example.android.lanchonetedotiago.telapizzas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIZZAS"
        android:textSize="45dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginTop="120sp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIZZA DE FRANGO = R$ 30"
            android:id="@+id/PizzaFrango"
            android:onClick="PizzaFrango"
            android:layout_gravity="center_vertical" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="PizzaCarne"
            android:text="PIZZA DE CARNE DO SOL = R$ 30"
            android:id="@+id/PizzaCarne"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="PizzaChocolate"
            android:text="PIZZA DE CHOCOLATE = R$ 30"
            android:id="@+id/PizzaChocolate"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="PizzaMilho"
            android:text="PIZZA DE MILHO = R$ 30"
            android:id="@+id/PizzaMilho"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="PIZZA TUDÃƒO = R$ 30"
            android:onClick="PizzaTudao"
            android:id="@+id/PizzaTudao"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:id="@+id/finalizarCompra"
            android:text="FINALIZAR COMPRA"/>

    </LinearLayout>


</RelativeLayout>
