<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background2"
    tools:context="com.example.android.lanchonetedotiago.telasanduiche">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SANDUÍCHES"
        android:textSize="45dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginTop="120sp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SANDUÍCHE DE CARNE = R$ 10"
            android:id="@+id/SandubaCarne"
            android:onClick="SandubaCarne"
            android:layout_gravity="center_vertical" />

        <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
            android:onClick="SandubaBacon"
        android:text="SANDUÍCHE DE BACON = R$ 10"
            android:id="@+id/SandubaBacon"
        />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="SandubaFrango"
            android:text="SANDUÍCHE DE FRANGO = R$ 10"
            android:id="@+id/SandubaFrango"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="Minuano"
            android:text="MINUANO = R$ 10"
            android:id="@+id/Minuano"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="X-TUDO = R$ 10"
            android:onClick="xTudo"
            android:id="@+id/xtudo"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:id="@+id/finalizarCompra"
            android:text="FINALIZAR COMPRA"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/TelaCarrinho"
            android:textSize="45dp"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>
</RelativeLayout>
